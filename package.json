{
  "name": "firescope",
  "version": "1.5.0",
  "description": "A Chrome DevTools extension for monitoring and analyzing Firestore requests",
  "type": "module",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "vite",
    "build:free": "EDITION=free vite build && node scripts/check-free-artifacts.js",
    "build:pro": "EDITION=pro vite build",
    "build:both": "pnpm run build:clean && pnpm run build:free && (cd dist && zip -r ../firescope.zip .) && pnpm run build:clean && pnpm run build:pro && (cd dist && zip -r ../firescope-pro.zip .)",
    "artifacts:clean": "rm -f firescope.zip firescope-pro.zip",
    "build:ci": "pnpm run artifacts:clean && pnpm run build:both",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "build:clean": "rm -rf dist",
    "lint": "eslint src/ demo/ scripts/ test/ --ext .js",
    "lint:src": "eslint src/ --ext .js",
    "lint:demo": "eslint demo/ --ext .js",
    "lint:scripts": "eslint scripts/ --ext .js",
    "lint:test": "eslint test/ --ext .js",
    "format": "prettier --write .",
    "format:src": "prettier --write src/",
    "format:demo": "prettier --write demo/",
    "format:scripts": "prettier --write scripts/",
    "format:test": "prettier --write test/",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "semantic-release",
    "demo:website": "pnpm run sync:demo-env && pnpm run build:free && http-server demo/ -p 3000 -c-1",
    "demo:seed": "node demo/seed-data.js",
    "sync:demo-env": "node scripts/update-demo-env.js",
    "brand:generate": "node scripts/generate-brand.js",
    "generate:chrome-images": "node scripts/generate-chrome-store-images.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omar-dulaimi/firescope.git"
  },
  "keywords": [
    "chrome-extension",
    "devtools",
    "firestore",
    "firebase",
    "testing",
    "monitoring"
  ],
  "author": "Omar Dulaimi",
  "license": "GPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@crxjs/vite-plugin": "^2.2.0",
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^10.0.3",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "eslint": "^9.34.0",
    "firebase": "^10.7.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.6.2",
    "semantic-release": "^22.0.0",
    "sharp": "^0.34.3",
    "supertest": "^7.1.4",
    "terser": "^5.43.1",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
